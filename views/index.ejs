      <section id="user-authentication" class="user-authentication"></section>

      <section id="restaurant-user" class="restaurant-user"></section>

      <section id="customer-user" class="hidden-on-load">
        <!---------------------------Restaurants------------------------------->
        <div class="restaurants-container"></div>
        <!---------------------------MENU ------------------------------------>

        <div class="menu-container"></div>

        <!---------------------------CART ------------------------------------>
        <div class="cart-container"></div>

        <!-----------------CONFIRMATION and Status --------------------------->
      </section>
    </main>
