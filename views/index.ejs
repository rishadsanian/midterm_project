  <!-------------------------BODY  ------------------------------------>
  <body>
    <!-----------------------IN LINE SCRIPT----------------------------------->
    <script>
      const user = "<%= user %>";
      const userType = "<%= userType %>";
      const userId = "<%= userId %>";
      //  showHero(user);
    </script>

    <header><%- include('partials/header') %></header>

    <section class="hero">
      <div class="hero-content">
        <% if (user) { %> <% if (userType === 'customer') { %>
        <h1>Welcome <%= user %></h1>
        <p>Find your favorite restaurants below.</p>
        <a
          href="#main"
          class="scroll-to-main text-dark link-opacity-50 underline-opacity-0"
          >Find Food</a
        >
        <% } %> <% } else { %>
        <h1>Welcome to FeedHungry</h1>
        <p>Order online, pick up, and satisfy your cravings effortlessly.</p>
        <a href="/login" class="btn open-login">Get Started</a>
        <% } %>
      </div>
    </section>
    <span class="hero-span"></span>

    <!--     
    <h1>Welcome <%= user %> ðŸ¥”</h1>
